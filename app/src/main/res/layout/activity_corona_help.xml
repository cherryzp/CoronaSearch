<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CoronaHelpActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제보하기"
            android:textColor="#333"
            android:textSize="24dp" />

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내가 알고있는 한번의 제보가 코로나 가몀 증가를 막는 큰 힘이 됩니다. \n감사합니다."
            android:textSize="14dp"
            android:textColor="#333"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문의 E-mail : coronasearchhelp@gmail.com"
            android:textColor="#333"
            android:textSize="14dp"
            android:layout_gravity="right"/>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/copy_email_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="이메일 주소 복사하기"
                android:textColor="#333"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#ccc"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/send_email_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="제보 이메일 보내기"
                android:textColor="#333"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#333"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/corona_help_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>